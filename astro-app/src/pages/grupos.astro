      for (let i = 0; i < jugadores.length; i++) {
        for (let j = i + 1; j < jugadores.length; j++) {
          const equipoLocal = typeof jugadores[i].equipo === 'string' ? jugadores[i].equipo : jugadores[i].equipo?.id;
