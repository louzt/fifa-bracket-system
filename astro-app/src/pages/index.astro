---
// Layout especial para portada sin header/footer
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Torneo FIFA Xtreme 2025" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>FIFA Tournament Manager - Xtreme 2025</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Reset completo para la portada */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html, body {
        height: 100%;
        overflow-x: hidden;
      }
      
      body {
        background: #0f172a;
        color: white;
        font-family: system-ui, sans-serif;
      }
    </style>
  </head>
  <body>
    <!-- Portada Épica de Pantalla Completa -->
    <div class="fixed inset-0 w-full h-full flex items-center justify-center overflow-hidden">
      <!-- Background Effects -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-blue-900/30 to-purple-900/50"></div>
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-green-500/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 4s;"></div>
      </div>

      <!-- Navegación flotante centrada -->
      <nav class="absolute top-8 left-1/2 transform -translate-x-1/2 z-50">
        <div class="flex items-center justify-center space-x-12 bg-black/20 backdrop-blur-md rounded-3xl px-20 py-8 border border-white/10 shadow-2xl">
          <a href="/jugadores" class="text-white/70 hover:text-white transition-all duration-300 hover:scale-110 font-medium whitespace-nowrap">👥 Jugadores</a>
          <a href="/sorteo" class="text-white/70 hover:text-white transition-all duration-300 hover:scale-110 font-medium whitespace-nowrap">🎲 Sorteo</a>
          <a href="/grupos" class="text-white/70 hover:text-white transition-all duration-300 hover:scale-110 font-medium whitespace-nowrap">⚽ Grupos</a>
          <a href="/torneo" class="text-white/70 hover:text-white transition-all duration-300 hover:scale-110 font-medium whitespace-nowrap">🏆 Torneo</a>
          <a href="/estadisticas-avanzadas" class="text-white/70 hover:text-white transition-all duration-300 hover:scale-110 font-medium whitespace-nowrap">📊 Stats</a>
        </div>
      </nav>

      <!-- Contenido Principal -->
      <div class="relative z-10 text-center px-6 w-full max-w-6xl mx-auto">
        <!-- Título Principal -->
        <div class="mb-8">
          <h1 class="text-8xl md:text-9xl lg:text-[12rem] font-black mb-4 leading-none">
            <span class="bg-gradient-to-r from-blue-400 via-cyan-300 to-blue-500 bg-clip-text text-transparent drop-shadow-2xl">
              FIFA
            </span>
          </h1>
          <h2 class="text-5xl md:text-6xl lg:text-8xl font-bold mb-6">
            <span class="bg-gradient-to-r from-yellow-400 via-orange-400 to-red-500 bg-clip-text text-transparent">
              Tournament
            </span>
          </h2>
          <h3 class="text-4xl md:text-5xl lg:text-7xl font-bold mb-8">
            <span class="bg-gradient-to-r from-green-400 via-emerald-400 to-teal-400 bg-clip-text text-transparent">
              Xtreme 2025
            </span>
          </h3>
        </div>

        <!-- Descripción -->
        <div class="mb-24">
          <p class="text-xl md:text-2xl lg:text-3xl text-gray-300 max-w-5xl mx-auto leading-relaxed mb-16 font-light">
            Sistema avanzado de gestión de torneos FIFA con generación automática de grupos, 
            eliminatorias adaptativas y estadísticas en tiempo real.
          </p>
          
          <!-- Características Destacadas -->
          <div class="flex flex-wrap justify-center gap-6 mb-20">
            <span class="px-6 py-3 bg-blue-600/20 border border-blue-500/30 rounded-full text-blue-300 text-lg font-medium">
              🎲 Sorteo Interactivo
            </span>
            <span class="px-6 py-3 bg-purple-600/20 border border-purple-500/30 rounded-full text-purple-300 text-lg font-medium">
              ⚙️ Grupos Automáticos
            </span>
            <span class="px-6 py-3 bg-green-600/20 border border-green-500/30 rounded-full text-green-300 text-lg font-medium">
              🏆 Eliminatorias Adaptativas
            </span>
            <span class="px-6 py-3 bg-yellow-600/20 border border-yellow-500/30 rounded-full text-yellow-300 text-lg font-medium">
              📊 Estadísticas en Vivo
            </span>
          </div>
        </div>

        <!-- Botón de Inicio -->
        <div class="mb-32">
          <a href="/jugadores" 
             class="inline-block px-20 py-8 bg-gradient-to-r from-blue-600 via-purple-600 to-blue-700 
                    hover:from-blue-700 hover:via-purple-700 hover:to-blue-800
                    text-white text-2xl font-bold rounded-3xl
                    transform hover:scale-105 transition-all duration-300
                    shadow-2xl hover:shadow-blue-500/25
                    border-2 border-blue-500/50 hover:border-blue-400">
            🚀 Comenzar Torneo
          </a>
        </div>

        <!-- Créditos -->
        <div class="text-center space-y-6">
          <p class="text-xl text-gray-400">
            Hecho por <span class="font-bold text-white text-2xl">David Mireles</span>
          </p>
          <p class="text-lg text-gray-500">
            Sistema de gestión de torneos FIFA • 2025
          </p>
        </div>
      </div>

      <!-- Elementos Decorativos -->
      <div class="absolute top-10 left-10 text-6xl opacity-20 animate-bounce" style="animation-delay: 1s;">⚽</div>
      <div class="absolute top-20 right-20 text-5xl opacity-20 animate-bounce" style="animation-delay: 3s;">🏆</div>
      <div class="absolute bottom-20 left-20 text-4xl opacity-20 animate-bounce" style="animation-delay: 5s;">🎲</div>
      <div class="absolute bottom-10 right-10 text-5xl opacity-20 animate-bounce" style="animation-delay: 2s;">📊</div>
    </div>
</Layout>

<style>
  /* Animaciones épicas */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInFromLeft {
    from {
      opacity: 0;
      transform: translateX(-100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInFromRight {
    from {
      opacity: 0;
      transform: translateX(100px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes glow {
    0%, 100% {
      text-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
    }
    50% {
      text-shadow: 0 0 40px rgba(59, 130, 246, 0.8), 0 0 60px rgba(59, 130, 246, 0.6);
    }
  }

  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Aplicar animaciones */
  .min-h-screen > div:nth-child(2) > div {
    animation: fadeInUp 1.2s ease-out forwards;
  }

  .min-h-screen > div:nth-child(2) > div:nth-child(1) {
    animation-delay: 0.2s;
  }

  .min-h-screen > div:nth-child(2) > div:nth-child(2) {
    animation-delay: 0.4s;
  }

  .min-h-screen > div:nth-child(2) > div:nth-child(3) {
    animation-delay: 0.6s;
  }

  .min-h-screen > div:nth-child(2) > div:nth-child(4) {
    animation-delay: 0.8s;
  }

  /* Título principal con glow */
  h1 span {
    animation: glow 3s ease-in-out infinite;
  }

  /* Gradientes animados */
  .bg-gradient-to-r {
    background-size: 300% 300%;
    animation: gradient-x 6s ease infinite;
  }

  /* Efectos hover mejorados */
  .transform:hover {
    filter: brightness(1.1);
    box-shadow: 0 25px 50px rgba(59, 130, 246, 0.25);
  }

  /* Elementos flotantes */
  .absolute.animate-bounce {
    animation: float 4s ease-in-out infinite;
  }

  /* Efectos de blur en background */
  .blur-3xl {
    filter: blur(60px);
  }

  /* Responsive para títulos */
  @media (max-width: 768px) {
    h1 {
      font-size: 4rem;
    }
    h2 {
      font-size: 2.5rem;
    }
    h3 {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 3rem;
    }
    h2 {
      font-size: 2rem;
    }
    h3 {
      font-size: 1.5rem;
    }
  }

  /* Efecto de partículas en el fondo */
  .min-h-screen::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(2px 2px at 20px 30px, #ffffff08, transparent),
      radial-gradient(2px 2px at 40px 70px, #ffffff06, transparent),
      radial-gradient(1px 1px at 90px 40px, #ffffff08, transparent),
      radial-gradient(1px 1px at 130px 80px, #ffffff06, transparent),
      radial-gradient(2px 2px at 160px 30px, #ffffff08, transparent);
    background-repeat: repeat;
    background-size: 200px 100px;
    animation: float 20s linear infinite;
    pointer-events: none;
  }
</style>
