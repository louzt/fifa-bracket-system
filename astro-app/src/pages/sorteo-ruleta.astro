      private exportarResultados(): void {
        if (this.historial.length === 0) return;

        const csv = [
          'Jugador,Equipo,Fecha',
          ...this.historial.map(h => `${h.jugador},${h.equipo},${h.timestamp.toLocaleString()}`)
